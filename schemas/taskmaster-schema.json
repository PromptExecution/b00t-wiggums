{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TaskMaster Tasks Schema",
  "description": "Schema for b00t-wiggums TaskMaster-compatible task management",
  "type": "object",
  "required": ["tasks", "metadata"],
  "properties": {
    "tasks": {
      "type": "array",
      "description": "Array of tasks",
      "items": {
        "type": "object",
        "required": ["id", "title", "description", "status", "priority"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique task identifier (e.g., 'task-001')",
            "pattern": "^task-\\d+$"
          },
          "title": {
            "type": "string",
            "description": "Short task title",
            "minLength": 1
          },
          "description": {
            "type": "string",
            "description": "Detailed task description"
          },
          "status": {
            "type": "string",
            "description": "Task status",
            "enum": ["pending", "in-progress", "done", "review", "cancelled"]
          },
          "priority": {
            "type": "integer",
            "description": "Task priority (lower number = higher priority)",
            "minimum": 1
          },
          "acceptanceCriteria": {
            "type": "array",
            "description": "List of acceptance criteria",
            "items": {
              "type": "string"
            },
            "default": []
          },
          "dependsOn": {
            "type": "array",
            "description": "Task IDs this task depends on",
            "items": {
              "type": "string"
            },
            "default": []
          },
          "blockedBy": {
            "type": "array",
            "description": "Task IDs blocking this task (auto-computed)",
            "items": {
              "type": "string"
            },
            "default": []
          },
          "subtasks": {
            "type": "array",
            "description": "Child task IDs",
            "items": {
              "type": "string"
            },
            "default": []
          },
          "notes": {
            "type": "array",
            "description": "Timestamped notes/comments",
            "items": {
              "type": "string"
            },
            "default": []
          },
          "createdAt": {
            "type": "string",
            "description": "ISO 8601 timestamp of task creation",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "description": "ISO 8601 timestamp of last update",
            "format": "date-time"
          },
          "assignee": {
            "type": "string",
            "description": "Person or agent assigned to task"
          },
          "estimatedEffort": {
            "type": "string",
            "description": "Estimated effort (e.g., 'small', 'medium', 'large')",
            "enum": ["small", "medium", "large", "xlarge"]
          },
          "tags": {
            "type": "array",
            "description": "Task tags for categorization",
            "items": {
              "type": "string"
            },
            "default": []
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Project metadata",
      "required": ["project", "taskMasterVersion"],
      "properties": {
        "project": {
          "type": "string",
          "description": "Project name",
          "minLength": 1
        },
        "branchName": {
          "type": "string",
          "description": "Git branch name for this task set"
        },
        "description": {
          "type": "string",
          "description": "Project description"
        },
        "taskMasterVersion": {
          "type": "string",
          "description": "TaskMaster schema version",
          "pattern": "^\\d+\\.\\d+$"
        },
        "createdAt": {
          "type": "string",
          "description": "ISO 8601 timestamp of project creation",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "description": "ISO 8601 timestamp of last update",
          "format": "date-time"
        }
      }
    }
  }
}
